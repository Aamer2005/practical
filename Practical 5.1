#include<stdio.h>
#include<stdlib.h>
#define max 10
int stack1[max],top=-1;

int push(); 
int pop();
int print();

int push(int n)
{
    int num;

    if(top+n >= max-1)
    {
        printf("Stack is Overflow\n");
        return 0;
    }
    else
    {
        printf("Enter Element to be insert\n");
        for(int i=0;i<n;i++)
        {
        scanf("%d",&num);
        top++;
        stack1[top]=num;
        }
    }
}
int pop()
{
    int temp;
    if(top==-1)
    {
        printf("Stack Underflow \n");
        exit(1);
    }
    else
    {
        temp=stack1[top];
        printf("Popped element: %d\n", stack1[top]);
        top=top-1;
    }
}

int print()
{
    printf("Elements are : \n");
    for(int i=top;i>=0;i--)
    {
        printf("%d\n",stack1[i]);
    }
}

