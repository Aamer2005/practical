//)Write a programme to delete a number in array of size n at at beginning & specific position
#include <stdio.h>
void main()
{
int a[10],n,i=0, num, pos;
printf("Enter Size of Array\n");
scanf("%d",&n);
printf("Enter array element\n"); 
for(i=0; i<n;i++)
{ 
scanf("%d",&a[i]);
}
printf("Enter deletion element\n");
scanf("%d",&num);
printf("Enter index of element \n");
scanf("%d",&pos);
n=n-1;
for(i=pos-1;i<n;i++)
{
    a[i]=a[i+1];
}
printf("array elements are\n");
for(i=0;i<n;i++) {
printf("%d\n",a[i]); 
  }
}
